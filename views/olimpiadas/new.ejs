<%- include("../partials/header") %>
    <div class="row">
        <h1 style="text-align: center">Crear nueva olimpiada</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/olimpiadas/new" method="POST">
                <div class="form-group">
                    <label>Nombre</label>
                    <input required required class="form-control" type="text" name="nombre" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <label> Descripción </label>
                    <textarea required required class="form-control" name="descripcion" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <label>Requisitos. <a href="#">Click aquí</a> para saber como escribir correctamente los requisitos</label>
                    <textarea required class="form-control" type="text" name="requisitos" cols="30" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen. Por favor, inserta el link de la imagen que se colocará en la portada del evento.</label>
                    <input required required class="form-control" type="text" name="imagen" placeholder="Imagen">
                </div>
                <div class="form-group">
                    <label> Inserta la fecha del evento. </label>
                    <input required required class="form-control" type="date" name="fecha" placeholder="Fecha" value="">
                </div>
                <div class="form-group">
                    <label> ¿La covocatoria está abierta? </label> <br>
                    <input required required  type="radio" name="open" value="Sí"> Sí<br>
                    <input required required type="radio" name="open" value="No"> No
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">¡Listo!</button>
                </div>
            </form>
        </div>
    </div>

<%- include("../partials/footer") %>


